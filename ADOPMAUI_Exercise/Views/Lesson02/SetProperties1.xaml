<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ADOPMAUI_Exercise.Views.Lesson02.SetProperties1"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="SetProperties1">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="0"
            VerticalOptions="Center">
            <Label
                HorizontalOptions="Center"
                Text="Welcome to .NET MAUI!"
                VerticalOptions="Center" />

            <BoxView x:Name="lblColorBox" HeightRequest="100" />
            <BoxView x:Name="lblColorBox2" HeightRequest="100" />
            <BoxView x:Name="lblColorBox3" HeightRequest="100" />
            <BoxView x:Name="lblColorBox4" HeightRequest="100" />
            <BoxView x:Name="lblColorBox5" HeightRequest="100" />
            <BoxView x:Name="lblColorBox6" HeightRequest="100" />
            <Button
                x:Name="lbl"
                Clicked="Button_Clicked"
                Text="Change Color" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>